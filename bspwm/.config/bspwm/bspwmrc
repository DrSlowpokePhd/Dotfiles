#! /bin/sh

sxhkd &
# killall -p polybar &
polybar -c ~/.config/polybar/config.amber main &
dunst -conf ~/.config/dunst/dunstrc &
picom -b

#jackd --silent -d alsa -d hw:1
feh --no-fehbg --bg-scale '/home/drslowpokephd/Dotfiles/.wallpapers/background.jpg'

bspc monitor -d I II III IV V

bspc config border_width         6 
bspc config window_gap          20
bspc config focused_border_color "#d79921"
bspc config normal_border_color "#282828"
bspc config single_monocle false 

bspc config split_ratio          0.60
bspc config borderless_monocle   true
bspc config gapless_monocle      true

bspc rule -a Zathura state=tiled
bspc rule -a Gimp state=floating follow=on
bspc rule -a mpv sticky=on state=floating
bspc rule -a Unity state=floating
bspc rule -a Surf state=tiled
